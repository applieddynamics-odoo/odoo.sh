<odoo>
    <record id="view_adi_confirmation_dialog_form" model="ir.ui.view">
        <field name="name">adi.confirmation.dialog.form</field>
        <field name="model">adi.confirmation.dialog</field>
        <field name="arch" type="xml">
            <form string="Confirmation Required">
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="title" readonly="1"/>
                        </h2>
                    </div>
                    <field name="message" readonly="1" nolabel="1"/>
                </sheet>
                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
