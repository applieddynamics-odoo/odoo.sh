<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Form view for reusable confirmation dialog -->
    <record id="view_adi_confirmation_dialog_form" model="ir.ui.view">
        <field name="name">adi.confirmation.dialog.form</field>
        <field name="model">adi.confirmation.dialog</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <group>
                    <field name="title" readonly="1"/>
                    <field name="message" readonly="1" nolabel="1"/>
                </group>
                <footer>
                    <button string="Confirm"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

