<odoo>
    <record id="view_dispose_confirm_wizard_form" model="ir.ui.view">
        <field name="name">adi.dispose.confirm.wizard.form</field>
        <field name="model">adi.dispose.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Disposal">
                <sheet>
                    <div class="oe_title">
                        <h2>Please confirm that the shelf life item has been suitably disposed</h2>
                    </div>
                </sheet>
                <footer>
                    <button string="Yes" type="object" name="action_yes" class="btn-primary"/>
                    <button string="No" type="object" name="action_no" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

