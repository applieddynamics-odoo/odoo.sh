<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="adi_sale_order_form_inherit_root" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.adi.salesorder.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add Complete button to header (compact) -->
            <xpath expr="//header" position="inside">
            <button name="action_open_complete_wizard"
                    type="object"
                    string="Complete"
                    class="btn-primary"
                    invisible="state != 'sale' or x_adi_completed"/>
            </xpath>

            <xpath expr="//form/header" position="inside">
                <field name="x_adi_completed" invisible="1"/>
            </xpath>

        </field>
    </record>

    <!-- Wizard form view -->
    <record id="view_sale_order_complete_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.complete.wizard.form</field>
        <field name="model">sale.order.complete.wizard</field>
        <field name="arch" type="xml">
            <form string="Mark Complete">
                <group>
                    <field name="sale_order_id"/>
                </group>

                <group string="Quality Checks">
                    <field name="check_invoicing" readonly="1"/>
                    <field name="check_delivery" readonly="1"/>
                </group>

                <group>
                    <field name="notes" placeholder="Add completion notes (optional)"/>
                </group>

                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button string="Confirm Complete" type="object" name="action_confirm_complete" class="btn-primary"/>
                </footer>

            </form>
        </field>
    </record>

</odoo>




