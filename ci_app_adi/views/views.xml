<odoo>
  <data>
    <record model="ir.ui.view" id="ci_app_adi.list">
      <field name="name">ci_app_adi list</field>
      <field name="model">ci_app_adi.ci_app_adi</field>
      <field name="arch" type="xml">
        <tree>
          <field name="title"/>
          <field name="status"/>
          <field name="assignee"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="ci_app_adi.action_window">
      <field name="name">ci_app_adi window</field>
      <field name="res_model">ci_app_adi.ci_app_adi</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.server" id="ci_app_adi.action_server">
      <field name="name">ci_app_adi server</field>
      <field name="model_id" ref="model_ci_app_adi_ci_app_adi"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <menuitem name="ci_app_adi" id="ci_app_adi.menu_root"/>
<!--
    <menuitem name="Menu 1" id="ci_app_adi.menu_1" parent="ci_app_adi.menu_root"/>
    <menuitem name="Menu 2" id="ci_app_adi.menu_2" parent="ci_app_adi.menu_root"/>
-->
    <!-- actions -->
    <menuitem name="List" id="ci_app_adi.menu_list" parent="ci_app_adi.menu_root"
              action="ci_app_adi.action_window"/>
    <menuitem name="Server to list" id="ci_app_adi" parent="ci_app_adi.menu_root"
              action="ci_app_adi.action_server"/>
  </data>
</odoo>
