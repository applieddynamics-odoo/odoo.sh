<odoo>
    <data>
      <template id="ci_report">
	<t t-call="web.html_container">
	  <t t-foreach="docs" t-as="doc">
	    <t t-call="web.external_layout">
	      <div class="page">
		<style>
		  table, thead, tbody, th, td {
		  border: 0.1px solid black;
		  border-collapse: collapse;
		  }
		  td.quarter {
		  width: 25%;
		  }
		  td {
		  padding-left: 0.2rem;
		  padding-right: 0.2rem;
		  }
		  td.label {
		  font-weight: bold;
		  text-align: right;
		  }
		  td.large-input {
		  text-align: left;
		  }
		</style>
		<div class="text-center">
		  <h1>
		    <field t-field="doc.action_reference"/>/<field t-field="doc.title"/>
		  </h1>
		</div>
		<div class="row text-center">
		  <table style="width: 90%; left:5%;">
		    <tr>
		      <td class="quarter label">Date Opened:</td>
		      <td class="quarter"><field t-field="doc.date_opened"/></td>
		      <td class="quarter label">Status:</td>
		      <td class="quarter"><field t-field="doc.status"/></td>
		    </tr>
		    <tr>
		      <td class="label">Opened by:</td>
		      <td><field t-field="doc.opened_by"/></td>
		      <td class="label">Responsible:</td>
		      <td><field t-field="doc.owner"/></td>
		    </tr>
		    <tr>
		      <td class="label">Process area:</td>
		      <td><field t-field="doc.process_area"/></td>
		      <td colspan="2"></td>
		    </tr>
		    <tr style="min-height: 5rem;">
		      <td style="large-input" colspan="4">
			<b>Summary:</b><br/>
			<field t-field="doc.summary"/>
		      </td>
		    </tr>
		    <tr style="min-height: 5rem;">
		      <td style="large-input" colspan="4">
			<b>Notes:</b><br/>
			<field t-field="doc.notes"/>
		      </td>
		    </tr>
		    <tr>
		      <td class="label">Date Closed:</td>
		      <td><field t-field="doc.date_closed"/></td>
		      <td class="label">Verified by:</td>
		      <td><field t-field="doc.verified_by"/></td>
		    </tr>
		    <tr style="min-height: 5rem;">
		      <td style="large-input" colspan="4">
			<b>Verification Notes:</b><br/>
			<field t-field="doc.verification_notes"/>
		      </td>
		    </tr>
		    <tr>
		      <td class="label">Documents affected:</td>
		      <td colspan="3">
			<field t-field="doc.documents_affected"/>
		      </td>
		    </tr>
		  </table>
		</div>
