<odoo>
    <data>
      <template id="ci_report">
	<t t-call="web.html_container">
	  <t t-foreach="docs" t-as="doc">
	    <t t-call="web.external_layout">
	      <div class="page">
		<div class="text-center">
		  <h1>
		    <field t-field="doc.action_reference"/>/<field t-field="doc.title"/>
		  </h1>
		</div>
		<div class="row">
		  <div class="col-6">
		    <div>
		      <b>Date Opened:</b> <field t-field="doc.date_opened"/>
		    </div>
		    <div>
		      <b>Opened by:</b> <field t-field="doc.opened_by"/>
		    </div>
		    <div>
		      <b>Process area:</b> <field t-field="doc.process_area"/>
		    </div>
		  </div>
		  <div class="col-6">
		    <div>
		      <b>Status:</b> <field t-field="doc.status"/>
		    </div>
		    <div>
		      <b>Responsible:</b> <field t-field="doc.owner"/>
		    </div>
		  </div>
		</div>
		<div>
		  <h3>Summary</h3>
		  <p>
		    <field t-field="doc.summary"/>
		  </p>
		</div>
		<div>
		  <h3>Notes</h3>
		  <p>
		    <field t-field="doc.notes"/>
		  </p>
		</div>
		<div>
		  <div class="col-6">
		    <b>Date Closed:</b> <field t-field="doc.date_closed"/>
		  </div>
		  <div class="col-6">
		    <b>Verified by:</b> <field t-field="doc.verified_by"/>
		  </div>
		</div>
		<div>
		  <h3>Verification Notes</h3>
		  <field t-field="doc.verification_notes"/>
		</div>
	      </div>
	    </t>
	  </t>
	</t>
      </template>

      <template id="car_report">
	<t t-call="web.html_container">
	  <t t-foreach="docs" t-as="doc">
	    <t t-call="web.external_layout">
	      <div class="page">
		<div class="text-center">
		  <h1>
		    <field t-field="doc.action_reference"/>/<field t-field="doc.title"/>
		  </h1>
		</div>
		<div class="row">
		  <div class="col-6 small">
		    <div>
		      Process Area: <field t-field="doc.process_area"/>
		    </div>
		    <div>
		      Owner: <field t-field="doc.owner"/>
		    </div>
		  </div>
		  <div class="col-6 small">
		    <div>
		      Date Opened: <field t-field="doc.date_opened"/>
		    </div>
		    <div>
		      Date Closed: <field t-field="doc.date_done"/>
		    </div>
		  </div>
		</div>
		<p>
		  <field t-field="doc.summary"/>
		</p>
	      </div>
	    </t>
	  </t>
	</t>
      </template>
    </data>
</odoo>
