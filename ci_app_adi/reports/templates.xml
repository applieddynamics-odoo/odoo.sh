<odoo>
    <data>
      <template id="ci_report">
	<t t-call="web.html_container">
	  <t t-foreach="docs" t-as="doc">
	    <t t-call="web.external_layout">
	      <div class="page">
		<style>
		  p {
		  margin-left: 1rem;
		  }
		  .row {
		  padding-top: 1rem;
		  padding-bottom: 1rem;
		  }
		  h3 {
		  margin-bottom: 0;
		  padding-bottom: 0;
		  }
		  div > hr {
		  padding-top: 0.1rem;
		  margin: 0;
		  padding-bottom: 0.3rem;
		  }
		</style>
		<div class="text-center">
		  <h1>
		    <field t-field="doc.action_reference"/>/<field t-field="doc.title"/>
		  </h1>
		</div>
		<div class="row">
		  <div class="col-6">
		    <div>
		      <b>Date Opened:</b> <field t-field="doc.date_opened"/>
		    </div>
		    <div>
		      <b>Opened by:</b> <field t-field="doc.opened_by"/>
		    </div>
		    <div>
		      <b>Process area:</b> <field t-field="doc.process_area"/>
		    </div>
		  </div>
		  <div class="col-6">
		    <div>
		      <b>Status:</b> <field t-field="doc.status"/>
		    </div>
		    <div>
		      <b>Responsible:</b> <field t-field="doc.owner"/>
		    </div>
		  </div>
		</div>
		<div>
		  <h3>Summary</h3>
		  <hr/>
		  <p>
		    <field t-field="doc.summary"/>
		  </p>
		</div>
		<div>
		  <h3>Notes</h3>
		  <hr/>
		  <p>
		    <field t-field="doc.notes"/>
		  </p>
		</div>
		<div class="row">
		  <div class="col-6">
		    <div>
		      <b>Date Closed:</b> <field t-field="doc.date_closed"/>
		    </div>
		  </div>
		  <div class="col-6">
		    <div>
		      <b>Verified by:</b> <field t-field="doc.verified_by"/>
		    </div>
		  </div>
		</div>
		<div>
		  <h3>Verification Notes</h3>
		  <hr/>
		  <p>
		    <field t-field="doc.verification_notes"/>
		  </p>
		</div>
		<div>
		  <b>Documents affected:</b> <field t-field="doc.documents_affected"/>
		</div>
	      </div>
	    </t>
	  </t>
	</t>
      </template>

