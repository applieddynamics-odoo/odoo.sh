<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    MRP order form inherited-->
    <record id="mrp_production_view_form_inherit_ad_mto_custom" model="ir.ui.view">
        <field name="name">mrp.production.view.form.inherit.ad.mto.custom</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <button name="action_confirm" position="after">
                <button name="action_run_moves" type="object" string="Run Moves" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed')]}" />
            </button>
        </field>
    </record>
</odoo>