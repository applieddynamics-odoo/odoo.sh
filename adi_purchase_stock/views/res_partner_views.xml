<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_inherit_adi" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.adi</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='on_time_rate']" position="attributes">
	      <attribute name="style">color: red;</attribute>
	      <attribute name="attrs">{"invisible":[("on_time_rate", "&gt;=", "90")]}</attribute>
            </xpath>
	    <xpath expr="//field[@name='on_time_rate']" position="after">
	      <field name="on_time_rate" attrs="{'invisible':[('on_time_rate', '&lt;', '90')]}"></field>
            </xpath>
	    <div name="button_box" position="inside">
	      <button type="object" name="action_view_order_lines">View PO Lines</button>
	    </div>
        </field>
    </record>
</odoo>
