<odoo>
  <data>
    <record model="ir.ui.view" id="flat_bom_view_tree_view">
      <field name="name">Flattened BOM View</field>
      <field name="model">flat_bom.flat_bom.view</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <!--<xpath expr="//tree" position="attributes">
          <attribute name="js_class">button_in_tree</attribute>
        </xpath>-->
        <tree>
          <field name="sale_order_id"/>
          <field name="flat_bom_id"/>
          <field name="part_number"/>
          <field name="product_name"/>
          <field name="product_category_id"/>
          <field name="product_classification"/>
          <field name="manufacturer_id"/>
          <field name="manufacturer_pn"/>
          <field name="quantity"/>
          <field name="lifecycle_status"/>
          <field name="product_us_eccn"/>
          <field name="last_purchased"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="flat_bom_view_tree_view_search">
      <field name="name">Filter Search</field>
      <field name="model">flat_bom.flat_bom.view</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search>
          <filter string="Maintenance Only" name="filter_maintenance" domain="[('product_exclude_from_maintenance', '!=', 'Yes'), ('product_category_id', '!=', 'Documents')]"/>
        </search>
      </field>
    </record>
        
    <record id="flat_bom.new_tree_action_window" model="ir.actions.act_window">
      <field name="name">Flattened BOM View</field>
      <field name="res_model">flat_bom.flat_bom.view</field>
      <field name="view_mode">tree,form</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_id" ref="flat_bom_view_tree_view"/>
    </record>

    <record id="flat_bom.create_flat_boms_action" model="ir.cron">
      <field name="name">Create Flat BOMs</field>
      <field name="model_id" ref="model_flat_bom_flat_bom"></field>
      <field name="numbercall">0</field>
      <!--<field name="interval_number">1</field>
      <field name="interval_type">weeks</field>-->
      <field name="code">model.create_flat_boms()</field>
    </record>

      
    <menuitem name="FLAT BOM NEW (WIP)" id="flat_bom.menu_root"/>
    <menuitem name="View" id="flat_bom.menu_view" parent="flat_bom.menu_root"
        action="flat_bom.new_tree_action_window"/>
    <menuitem name="Update Database" id="flat_bom.update_database_button" parent="flat_bom.menu_root"
        action="flat_bom.create_flat_boms_action"/>
  </data>
</odoo>